VITE_NOTIFICATION_HUB_URL=http://localhost:5000
VITE_PORT=3002
VITE_BASE=/dashboard/

# Backend API base URL (used for /api/sso/v3/auth/* proxy endpoints)
VITE_API_URL=http://localhost:5000

# HexaSync SSO v3
VITE_SSO_CLIENT_ID=simple-rdbms-restful-api-dashboard
VITE_SSO_PUBLIC_URL=https://sso.hexasync.com

# Must match what is registered in SSO for this client
VITE_SSO_REDIRECT_URI=https://localhost:3000/sso/callback

# Token storage (cyberbot-v2 compatible)
# WARNING: localStorage is XSS-sensitive. Prefer true for dev.
USE_SESSION_STORAGE=true

# Token exchange request body type
# Options: json | urlencoded | form
EXCHANGE_TOKEN_POST_BODY_TYPE=json